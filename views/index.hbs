{{!< layout}}

@{{user.username}}
<hr/>
<div class="row">
  <div class="col-md-4">
    <h3>New tweet</h3>
    <form>
      <fieldset class="form-group">
        <label>Tweet</label>
        <textarea class="form-control"></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label>Schedule date</label>
        <div class='input-group date' data-datepicker="data-datepicker">
            <input type='text' class="form-control" />
            <span class="input-group-addon">
                <i class="fa fa-calendar"></i>
            </span>
        </div>
      </fieldset>
      <br/>
      <button class="btn btn-primary">Submit</button>
    </form>
  </div>
  <div class="col-md-8">
    <h3>Scheduled Tweet</h3>
  </div>
</div>
